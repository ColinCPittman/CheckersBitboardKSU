{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Without Debugging",  // Name it something descriptive
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.exe",  // Path to your compiled executable
            "args": [],  // You can add command-line arguments here if needed
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",  // Set the working directory to the folder where the executable is
            "externalConsole": true,  // Open a new terminal window for the program output
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Users/colin/Documents/mingw64/bin/gdb.exe",  // Path to your GDB installation
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "",  // Leave this empty to avoid running a pre-build task
            "logging": {
                "trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            }
        }
    ]
}
